{
  "extends": "@edx/eslint-config",
  "parser": "@babel/eslint-parser",
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "config/*.js"
        ]
      }
    ],
    "class-methods-use-this": [
      "off"
    ],
    // Remove once xgettext supports backticks
    "prefer-template": [
      "off"
    ],
    // Remove once xgettext supports backticks
    "no-restricted-syntax": [
      "error",
      "TemplateLiteral"
    ]
  },
  "env": {
    "jasmine": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "requireConfigFile": false
  },
  "globals": {
    "FB": true,
    "gettext": true,
    "loadFixtures": true
  }
}
